<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="domain.a.not.wz.cipherdiary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CoreActivity"
            android:label="@string/title_activity_core"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name=".data.DiaryProvider"
            android:authorities="@string/content_authority"
            android:exported="false" />

        <activity
            android:name=".InputEntryActivity"
            android:label="@string/title_activity_input_entry"
            android:parentActivityName=".CoreActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="domain.a.not.wz.cipherdiary.CoreActivity" />
        </activity>
        <activity
            android:name=".DiaryEntryActivity"
            android:label="@string/title_activity_diary_entry"
            android:parentActivityName=".CoreActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="domain.a.not.wz.cipherdiary.CoreActivity" />
        </activity>
        <activity
            android:name=".DeleteDiaryListActivity"
            android:label="@string/title_activity_delete_diary_list"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="domain.a.not.wz.cipherdiary.LoginActivity" />
        </activity>
    </application>

</manifest>